{
  // suggestion
  "suggest.timeout": 5000,
  "suggest.maxCompleteItemCount": 24,

  // diagnostics
  "diagnostic.errorSign": "!",
  "diagnostic.warningSign": "W",
  "diagnostic.infoSign": "I",
  "diagnostic.hintSign": ">",

  // function signature
  "signature.target": "echo",

  // preferences
  "coc.preferences.rootPatterns": [
    ".git",
    ".hg",
    ".vim"
  ],
  "coc.preferences.extensionUpdateCheck": "never",
  "coc.preferences.currentFunctionSymbolAutoUpdate": true,
  "coc.preferences.useQuickfixForLocations": true,

  /*  language config*/
  // python
  "python.jediEnabled": false,
  "python.autoUpdateLanguageServer": false,
  // yaml
  "yaml.validate": false,
  "yaml.schemas": {
    "https://kubernetesjsonschema.dev/v1.14.0/deployment-apps-v1.json": "/*.yml",
    "https://kubernetesjsonschema.dev/v1.10.3-standalone/service-v1.json": "/*.yml"
  },
  // java - disable autobuild due to high cpu consumpution.
  "java.autobuild.enabled": false,
  // scala - disable to prevent scala langserver from running when developing java.
  "metals.enable": false,
  "languageserver": {
    // c/c++/obj-c
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "cuda", "objc", "objcpp"],
      "rootPatterns": [".ccls", "compile_commands.json", ".vim/", ".git/", ".hg/"],
      "initializationOptions": {
        "cache": {
           "directory": ".ccls-cache"
        }
      }
    },
    // terraform
    "terraform": {
      "command": "terraform-ls",
      "args": ["serve"],
      "filetypes": [
        "terraform",
        "tf"
      ],
      "initializationOptions": {},
      "settings": {}
    }
  }
}
