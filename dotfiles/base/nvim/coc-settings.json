{
  // suggestion
  "suggest.timeout": 5000,
  "suggest.maxCompleteItemCount": 24,

  // diagnostics
  "diagnostic.errorSign": "!",
  "diagnostic.warningSign": "W",
  "diagnostic.infoSign": "I",
  "diagnostic.hintSign": ">",

  // function signature
  "signature.target": "echo",

  // preferences
  "coc.preferences.rootPatterns": [
    ".git",
    ".hg",
    ".vim"
  ],
  "coc.preferences.extensionUpdateCheck": "never",
  "coc.preferences.currentFunctionSymbolAutoUpdate": true,
  "coc.preferences.useQuickfixForLocations": true,

  /* language config */
  // python
  "python.formatting.provider": "black",
  "python.analysis.typeCheckingMode": "basic",
  // yaml
  "yaml.validate": true,
  "yaml.trace.server": "verbose",
  // disabled due to bug with github actions pulling wrong schema
  // https://github.com/redhat-developer/vscode-yaml/issues/397
  "yaml.schemaStore.enable": false,
  "yaml.schemas": {
    // ci/cd
    "https://json.schemastore.org/github-workflow": "/.github/workflows/*.yaml",
    "https://json.schemastore.org/gitlab-ci": "/.gitlab-ci.yaml",
    // pre commit hooks
    "https://json.schemastore.org/pre-commit-config": "/.pre.commit-config.yaml",
    // k8s yaml spec
    "kubernetes": [
      "deployment.y*ml",
      "service.y*ml",
      "svc.y*ml",
      "pod.y*ml"
    ]
  },
  // java - disable autobuild due to high cpu consumpution.
  "java.autobuild.enabled": false,
  // scala - disable to prevent scala langserver from running when developing java.
  "metals.enable": false,
  "languageserver": {
    // c/c++/obj-c
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "cuda", "objc", "objcpp"],
      "rootPatterns": [".ccls", "compile_commands.json", ".vim/", ".git/", ".hg/"],
      "initializationOptions": {
        "cache": {
           "directory": ".ccls-cache"
        }
      }
    },
    // terraform
    "terraform": {
      "command": "terraform-ls",
      "args": ["serve"],
      "filetypes": [
        "terraform",
        "tf"
      ],
      "initializationOptions": {},
      "settings": {}
    }
  }
}
